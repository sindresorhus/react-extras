{
	"name": "react-extras",
	"version": "0.8.0",
	"description": "Useful components and utilities for working with React",
	"license": "MIT",
	"repository": "sindresorhus/react-extras",
	"author": {
		"name": "Sindre Sorhus",
		"email": "sindresorhus@gmail.com",
		"url": "sindresorhus.com"
	},
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"build": "babel 'source/*.js' --out-dir=dist",
		"test": "xo && ava && tsd-check",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist",
		"index.d.ts"
	],
	"keywords": [
		"react",
		"extras",
		"component",
		"components",
		"util",
		"utils",
		"utilities",
		"helper",
		"helpers",
		"auto-bind",
		"autobind",
		"bind",
		"class",
		"css",
		"classname",
		"classnames",
		"classes"
	],
	"dependencies": {
		"prop-types": "^15.6.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.2.2",
		"@babel/plugin-transform-modules-commonjs": "^7.2.0",
		"@babel/preset-env": "^7.2.3",
		"@babel/preset-react": "^7.0.0",
		"@babel/register": "^7.0.0",
		"ava": "^1.0.1",
		"babel-eslint": "^10.0.1",
		"browser-env": "^3.2.5",
		"jest-prop-type-error": "^1.1.0",
		"react": "^16.7.0",
		"react-dom": "^16.7.0",
		"react-test-renderer": "^16.7.0",
		"tsd-check": "^0.3.0",
		"xo": "^0.23.0"
	},
	"peerDependencies": {
		"react": ">=16.7"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"parser": "babel-eslint",
		"rules": {
			"import/no-unresolved": "off",
			"no-unused-vars": "off"
		},
		"ignores": [
			"source/auto-bind.js",
			"source/class-names.js"
		]
	},
	"ava": {
		"require": [
			"@babel/register",
			"jest-prop-type-error"
		]
	},
	"babel": {
		"plugins": [
			"@babel/plugin-transform-modules-commonjs"
		],
		"presets": [
			"@babel/preset-env",
			"@babel/preset-react"
		]
	}
}
